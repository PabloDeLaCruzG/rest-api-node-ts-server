{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist", 
    "lib": ["ESNext"], 
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true                            /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*.ts"]
}
