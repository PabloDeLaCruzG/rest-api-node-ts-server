{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist", 
    "lib": ["ESNext"], 
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true                             /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*.ts"]
}
